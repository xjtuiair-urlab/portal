---
import SidebarLayout from '../layouts/SidebarLayout.astro';
import { getEntry } from 'astro:content';

const rawBase = import.meta.env.BASE_URL;
const baseUrl = rawBase.endsWith('/') ? rawBase.slice(0, -1) : rawBase;
const getLink = (path: string) => {
    const cleanPath = path.startsWith('/') ? path.slice(1) : path;
    if (cleanPath === '') return `${baseUrl}/`;
    return `${baseUrl}/${cleanPath}`;
}

const newsEntry = await getEntry('news', 'news');
const newsList = newsEntry ? newsEntry.data : [];
---

<SidebarLayout title="News" bannerTitle="News" category="news">
    
    <div class="news-list">
        {newsList.map((news) => (
            <div class="news-horizontal-card">
                <div class="news-image">
                    <img src={getLink(news.image)} alt={news.title} />
                </div>
                <div class="news-info">
                    <div class="news-date">{news.date}</div>
                    <h3 class="news-title">{news.title}</h3>
                    <a href={news.link} target="_blank" rel="noopener noreferrer" class="news-more">
                        Read More ‚ûù
                    </a>
                </div>
            </div>
        ))}
    </div>

</SidebarLayout>

<style>
    .news-list {
        display: flex;
        flex-direction: column;
        gap: 30px;
        margin-top: 20px;
    }

    .news-horizontal-card {
        display: flex;
        gap: 25px;
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid #eee;
    }

    .news-horizontal-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    .news-image {
        width: 300px;
        flex-shrink: 0;
        height: 200px;
    }

    .news-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .news-info {
        padding: 25px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .news-date {
        font-size: 0.9rem;
        color: var(--text-light);
        margin-bottom: 10px;
    }

    .news-title {
        font-size: 1.4rem;
        color: var(--primary-blue);
        margin-bottom: 15px;
        line-height: 1.3;
    }

    .news-more {
        color: var(--accent-orange);
        font-weight: 600;
        font-size: 0.95rem;
    }

    @media (max-width: 768px) {
        .news-horizontal-card {
            flex-direction: column;
        }
        .news-image {
            width: 100%;
            height: 200px;
        }
    }
</style>
